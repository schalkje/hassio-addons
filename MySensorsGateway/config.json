{
  "name": "MySensors Gateway Add-on",
  "version": "0.11",
  "slug": "mysgw",
  "description": "MySensors Gateway Add-on runs a gateway on the same pi that's runnning Hassio",
  "url": "https://github.com/schalkje/hassio-addons",
  "arch": [
      "amd64",
	  "i386",
      "armhf"
  ],
  "startup": "before",
  "boot": "auto",
  "devices": [ "/dev/mem:/dev/mem:rw" ],
  "privileged": [ "SYS_RAWIO", "SYS_ADMIN", "NET_ADMIN" ],
  "gpio": "true",
  "ports": {
    "5003/tcp": 5003
  },
  "options": {
    "log_level": "info",
    "type": "mqtt",
    "mqtt_server": "addon_core_mosquitto.hassio",
    "transport": "nrf24", 
    "mqtt_clientid": "mysgw-00",
    "mqtt_topicin": "mysensors-in",
    "mqtt_topicout": "mysensors-out"
  },
  "schema": {
    "log_level": "match(^(trace|debug|info|notice|warning|error|fatal)$)",
    "type": "match(^(none|ethernet|mqtt)$)",
    "mqtt_server": "str",
    "transport": "match(^(none|nrf24|rf24|rs485|rfm95|rfm69)$)", 
    "mqtt_clientid": "str",
    "mqtt_topicin": "str",
    "mqtt_topicout": "str"
  },
  "environment": {
    "LOG_FORMAT": "{LEVEL}: {MESSAGE}"
  }
}